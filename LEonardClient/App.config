<?xml version="1.0" encoding="utf-8"?>
<!-- Lecky Engineering LEonardClient app.config -->
<configuration>
	<configSections>
		<section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
	</configSections>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
	</startup>
	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  throwConfigExceptions="true">
		<targets>
			<target name="logfile"
					xsi:type="File"
					fileName="${var:LogfileName}"
					archiveAboveSize="25000000"
					maxArchiveFiles="40">
			</target>
			<target name="AllLogRTB"
					xsi:type="RichTextBox"
					formName="ClientForm"
					controlName="AllLogRTB"
					autoScroll="true"
					maxLines="2000"
					useDefaultRowColoringRules="false"
					layout="${time}|${level}|${message}">
				<row-coloring condition="level >= LogLevel.Error" fontColor="Red" />
				<row-coloring condition="contains(message,'==>')" fontColor="Green" />
				<row-coloring condition="contains(message,'&lt;==')" fontColor="Blue" />
			</target>
			<target name="CommLogRTB"
					xsi:type="RichTextBox"
					formName="ClientForm"
					controlName="CommLogRTB"
					autoScroll="true"
					maxLines="2000"
					useDefaultRowColoringRules="false"
					layout="${time}|${level}|${message}">
				<row-coloring condition="contains(message,'==>')" fontColor="Green" />
				<row-coloring condition="contains(message,'&lt;==')" fontColor="Blue" />
			</target>
			<target name="ErrorLogRTB"
					xsi:type="RichTextBox"
					formName="ClientForm"
					controlName="ErrorLogRTB"
					autoScroll="true"
					maxLines="2000"
					useDefaultRowColoringRules="false"
					layout="${time}|${level}|${message}">
				<row-coloring condition="true" fontColor="Red" />
			</target>

		</targets>

		<rules>
			<logger name="*" minlevel="Trace" writeTo="logfile" />
			<logger name="*" minlevel="Trace" writeTo="AllLogRTB" />
			<logger name="*" minlevel="Error" writeTo="ErrorLogRTB" />
			<logger name="*" minlevel="Trace" writeTo="CommLogRTB">
				<filters defaultAction='Ignore'>
					<when condition="contains('${message}','==>') or contains('${message}','&lt;==')" action="Log" />
				</filters>
			</logger>
		</rules>
	</nlog>
</configuration>
